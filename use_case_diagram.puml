@startuml DiagrammeCasUtilisation

actor "Utilisateur" as User

rectangle "«système»\nGestionnaire de Tâches" {

    package "Gestion des Tâches (CRUD)" #E8F4FD {
        usecase "Créer une tâche"       as G1
        usecase "Voir les tâches"       as G2
        usecase "Modifier une tâche"    as G3
        usecase "Supprimer une tâche"   as G4
        usecase "Changer le statut\n(Pending / In Progress /\nCompleted / Abandoned)" as G5
        usecase "Assigner une priorité\n(Low / Medium / High)" as G6
    }

    package "Fonctionnalités Avancées" #FEF9E7 {
        usecase "Filtrer les tâches\n(par statut ou priorité)" as F1
        usecase "Trier les tâches\n(par date ou priorité)"     as F2
        usecase "Rechercher une tâche\n(par mots-clés)"        as F3
        usecase "Ajouter un commentaire"                        as F4
        usecase "Exporter les tâches\n(JSON / XML)"            as F5
        usecase "Importer les tâches\n(JSON / XML)"            as F6
    }

    usecase "Valider les entrées\n(non vide, longueur max)" as A1
}

User -- G1
User -- G2
User -- G3
User -- G4
User -- G5
User -- G6
User -- F1
User -- F2
User -- F3
User -- F4
User -- F5
User -- F6

G1  ..> A1 : «include»
G3  ..> A1 : «include»

G5   ..> G3  : «extend»
G6 ..> G3  : «extend»
F4  ..> G2    : «extend»


@enduml
